---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Ganadores from '../components/Ganadores.astro';
import JugarAhora from '../components/JugarAhora.astro';
import Soporte from '../components/Soporte.astro';
import Compartir from '../components/Compartir.astro';
import Transferencia from '../components/Transferencia.astro';
import BonoSection from '../components/BonoSection.astro'
---

<Layout title="EL JOKER | La plataforma más rápida">
  <Navbar />
  <main>
    <Hero />
    <BonoSection />
    <Soporte />
    <Ganadores />
    <Transferencia />
    <JugarAhora />
    <Compartir />
  </main>
  
  <!-- Footer simple -->
  <footer class="bg-joker-black py-6 border-t border-joker-purple/20">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <p class="text-gray-400 text-sm">© 2025 EL JOKER PLAY. Todos los derechos reservados.</p>
        </div>
        <div>
          <p class="text-gray-400 text-sm">Juego responsable. Solo para mayores de 18 años.</p>
        </div>
      </div>
    </div>
  </footer>
</Layout> 