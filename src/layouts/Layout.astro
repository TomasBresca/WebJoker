---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="EL JOKER - La plataforma de juegos más rápida y segura de Argentina">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<div class="relative overflow-hidden min-h-screen">
			<!-- Elementos flotantes de casino -->
			<div class="casino-elements">
				<!-- Cartas de poker flotantes -->
				<div class="casino-element floating-element left-[10%] top-[15%]">
					<div class="w-16 h-24 bg-white rounded-lg border-2 border-joker-purple flex items-center justify-center text-3xl text-joker-red">
						A♦
					</div>
				</div>
				<div class="casino-element floating-element right-[15%] top-[25%]">
					<div class="w-16 h-24 bg-white rounded-lg border-2 border-joker-purple flex items-center justify-center text-3xl text-black">
						K♠
					</div>
				</div>
				
				<!-- Fichas de casino flotantes -->
				<div class="casino-element floating-element left-[20%] top-[60%]">
					<div class="w-12 h-12 rounded-full bg-joker-red border-4 border-white"></div>
				</div>
				<div class="casino-element floating-element right-[25%] top-[70%]">
					<div class="w-14 h-14 rounded-full bg-joker-purple border-4 border-white"></div>
				</div>
				<div class="casino-element floating-element left-[75%] top-[40%]">
					<div class="w-10 h-10 rounded-full bg-joker-violet border-4 border-white"></div>
				</div>
			</div>
			
			<slot />
		</div>
	</body>
</html> 