<section id="soporte" class="py-20 bg-joker-black relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <h2 class="section-title">HABLA CON EL <span class="text-joker-purple">SOPORTE</span></h2>
    
    <div class="mt-12 flex flex-col md:flex-row items-center justify-center gap-10">
      <div class="w-full md:w-1/2 lg:w-2/5">
        <div class="bg-gradient-to-br from-joker-black to-joker-dark p-8 rounded-xl border border-joker-purple/30 shadow-xl hover:shadow-joker-purple/20 transition-shadow">
          <div class="flex items-center justify-center mb-6">
            <div class="w-20 h-20 rounded-full bg-joker-purple/20 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-joker-purple" fill="none" viewBox="0 0 24 24" stroke="currentColor">
